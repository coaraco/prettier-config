{
  "$schema": "http://json.schemastore.org/prettierrc",
  "bracketSpacing": true,
  "printWidth": 140,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "singleQuote": false,
  "semi": true,
  "quoteProps": "as-needed",
  "arrowParens": "avoid",
  "rangeStart": 0,
  "endOfLine": "lf",
  "bracketSameLine": false,
  "htmlWhitespaceSensitivity": "ignore",
  "attributeGroups": [
    "$ANGULAR_STRUCTURAL_DIRECTIVE",
    "$DEFAULT",
    "$ANGULAR_INPUT",
    "$ANGULAR_OUTPUT"
  ],
  "plugins": ["prettier-plugin-organize-attributes"],
  "attributeSort": "ASC",
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "angular",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "parser": "scss",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
